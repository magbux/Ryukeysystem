-- Create Option GUI (Improved with same theme)
local function CreateOptionGUI()
    local OptionScreenGui = Instance.new("ScreenGui")
    OptionScreenGui.Name = "RyusaiOptionHub"
    OptionScreenGui.ResetOnSpawn = false
    OptionScreenGui.Parent = LocalPlayer:WaitForChild("PlayerGui")

    local OptionMain = Instance.new("Frame")
    OptionMain.Size = UDim2.new(0, 240, 0, 200)  -- Slightly larger for more options
    OptionMain.Position = UDim2.new(0.5, -120, 0.5, -100)
    OptionMain.BackgroundColor3 = Colors.Primary
    OptionMain.BackgroundTransparency = 0.05
    OptionMain.BorderSizePixel = 0
    OptionMain.Parent = OptionScreenGui
    OptionMain.Visible = false
    AddCorner(OptionMain, 10)
    AddGradient(OptionMain, Colors.GradientStart, Colors.GradientEnd, 45)
    AddStroke(OptionMain, Colors.Stroke, 0.6, 1.5)

    local OptionTitleBar = Instance.new("TextLabel")
    OptionTitleBar.Size = UDim2.new(1, 0, 0, 32)
    OptionTitleBar.BackgroundColor3 = Colors.Secondary
    OptionTitleBar.BackgroundTransparency = 0.05
    OptionTitleBar.Text = "--{ Select Hub }--"
    OptionTitleBar.TextColor3 = Colors.Text
    OptionTitleBar.Font = Enum.Font.GothamBlack
    OptionTitleBar.TextSize = 18
    OptionTitleBar.Parent = OptionMain
    AddCorner(OptionTitleBar, 10)
    AddGradient(OptionTitleBar, Colors.GradientStart, Colors.GradientEnd)
    MakeDraggable(OptionTitleBar, OptionMain)

    -- Close Button for Option
    local OptionCloseButton = Instance.new("TextButton")
    OptionCloseButton.Size = UDim2.new(0, 24, 0, 24)
    OptionCloseButton.Position = UDim2.new(1, -28, 0, 4)
    OptionCloseButton.BackgroundTransparency = 1
    OptionCloseButton.Text = "x"
    OptionCloseButton.TextColor3 = Colors.Text
    OptionCloseButton.Font = Enum.Font.GothamBold
    OptionCloseButton.TextSize = 16
    OptionCloseButton.Parent = OptionTitleBar
    OptionCloseButton.MouseButton1Click:Connect(function()
        TweenService:Create(OptionMain, TweenInfo.new(0.3, Enum.EasingStyle.Quad, Enum.EasingDirection.In), {Size = UDim2.new(0, 240, 0, 0)}):Play()
        wait(0.3)
        OptionScreenGui:Destroy()
    end)
    AddHoverEffect(OptionCloseButton, Colors.Secondary, Colors.Error)

    local ScrollingFrame = Instance.new("ScrollingFrame")
    ScrollingFrame.Size = UDim2.new(1, 0, 1, -32)
    ScrollingFrame.Position = UDim2.new(0, 0, 0, 32)
    ScrollingFrame.BackgroundTransparency = 1
    ScrollingFrame.ScrollBarThickness = 4
    ScrollingFrame.ScrollBarImageColor3 = Colors.Stroke
    ScrollingFrame.Parent = OptionMain

    local OptionsList = Instance.new("UIListLayout")
    OptionsList.SortOrder = Enum.SortOrder.LayoutOrder
    OptionsList.Padding = UDim.new(0, 10)
    OptionsList.HorizontalAlignment = Enum.HorizontalAlignment.Center
    OptionsList.Parent = ScrollingFrame

    local function CreateButton(text, callback)
        local button = Instance.new("TextButton")
        button.Size = UDim2.new(0.9, 0, 0, 32)
        button.BackgroundColor3 = Colors.Secondary
        button.BackgroundTransparency = 0.05
        button.TextColor3 = Colors.Text
        button.Text = text
        button.Font = Enum.Font.GothamBlack
        button.TextSize = 16
        button.Parent = ScrollingFrame
        AddCorner(button, 8)
        AddGradient(button, Colors.GradientStart, Colors.GradientEnd)
        AddHoverEffect(button, Colors.Secondary, Colors.Accent)
        button.MouseButton1Click:Connect(function()
            callback()
            TweenService:Create(OptionMain, TweenInfo.new(0.3, Enum.EasingStyle.Quad, Enum.EasingDirection.In), {Size = UDim2.new(0, 240, 0, 0)}):Play()
            wait(0.3)
            OptionScreenGui:Destroy()
        end)
        return button
    end

    CreateButton("RyuSai's New Project", function()
        SendNotification("Hub", "Loading...")
        getgenv().AP_AutoLoad = nil
        loadstring(HttpGet("https://raw.githubusercontent.com/magbux/ryurakio20xbMnIk666/refs/heads/main/yoyoryusaihub"))()
    end)
    CreateButton("Ryusai Fluent Version", function()
        SendNotification("Hub", "Loading Ryusai...")
        getgenv().AP_AutoLoad = nil
        loadstring(HttpGet("https://raw.githubusercontent.com/magbux/ryurakio-without-load/refs/heads/main/no%20auto%20load%20yippe"))()
    end)
    CreateButton("Ryusai Command Hub", function()
        SendNotification("Hub", "Loading Command Hub...")
        getgenv().AP_AutoLoad = nil
        loadstring(HttpGet("https://raw.githubusercontent.com/magbux/ryu-command-hub/refs/heads/main/ryu%20commandment"))()
    end)
    CreateButton("Ryusai Shader Hub", function()
        SendNotification("Hub", "Loading Shader Hub...")
        getgenv().AP_AutoLoad = nil
        loadstring(HttpGet("https://raw.githubusercontent.com/magbux/shader-hub-lala/refs/heads/main/shader%20hub"))()
    end)

    -- Padding for layout
    local Padding = Instance.new("UIPadding")
    Padding.PaddingTop = UDim.new(0, 10)
    Padding.PaddingBottom = UDim.new(0, 10)
    Padding.PaddingLeft = UDim.new(0, 10)
    Padding.PaddingRight = UDim.new(0, 10)
    Padding.Parent = ScrollingFrame

    -- Animate appearance with fade-in
    OptionMain.Visible = true
    OptionMain.Transparency = 1
    TweenService:Create(OptionMain, TweenInfo.new(0.5, Enum.EasingStyle.Back, Enum.EasingDirection.Out), {Size = UDim2.new(0, 240, 0, 200), Transparency = 0}):Play()
end

-- Button Functions
Submit.MouseButton1Click:Connect(function()
    local key = KeyBox.Text:match("^%s*(.-)%s*$")  -- Trim spaces
    if key == "ryusai..?/(0" then
        SendNotification("Key Hub", "Correct Key!", 2)
        StatusLabel.Text = ""
        TweenService:Create(Main, TweenInfo.new(0.3, Enum.EasingStyle.Quad, Enum.EasingDirection.In), {Size = UDim2.new(0, 220, 0, 0)}):Play()
        wait(0.3)
        ScreenGui:Destroy()
        CreateOptionGUI()
    else
        SendNotification("Key Hub", "Wrong Key!", 2)
        StatusLabel.Text = "Invalid key. Try again."
        StatusLabel.TextColor3 = Colors.Error
        -- Shake animation for feedback
        local originalPos = Main.Position
        for i = 1, 3 do
            TweenService:Create(Main, TweenInfo.new(0.05), {Position = originalPos + UDim2.new(0, 5, 0, 0)}):Play()
            wait(0.05)
            TweenService:Create(Main, TweenInfo.new(0.05), {Position = originalPos - UDim2.new(0, 5, 0, 0)}):Play()
            wait(0.05)
        end
        TweenService:Create(Main, TweenInfo.new(0.05), {Position = originalPos}):Play()
    end
end)

CopyButton.MouseButton1Click:Connect(function()
    setclipboard("ryusai..?/(0")
    SendNotification("Key Hub", "Key copied to clipboard!", 2)
    StatusLabel.Text = "Key copied!"
    StatusLabel.TextColor3 = Colors.Success
    wait(2)
    StatusLabel.Text = ""
end)
