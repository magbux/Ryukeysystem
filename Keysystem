-- Create Option GUI (Also made smaller and black/gray theme)
local function CreateOptionGUI()
    local OptionScreenGui = Instance.new("ScreenGui")
    OptionScreenGui.Name = "RyusaiOptionHub"
    OptionScreenGui.ResetOnSpawn = false
    OptionScreenGui.Parent = LocalPlayer:WaitForChild("PlayerGui")
    local OptionMain = Instance.new("Frame")
    OptionMain.Size = UDim2.new(0, 200, 0, 160) -- Smaller
    OptionMain.Position = UDim2.new(0.5, -100, 0.5, -80)
    OptionMain.BackgroundColor3 = Color3.fromRGB(0, 0, 0) -- Black
    OptionMain.BackgroundTransparency = 0.1
    OptionMain.BorderSizePixel = 0
    OptionMain.Parent = OptionScreenGui
    OptionMain.Visible = false
    AddCorner(OptionMain)
    AddGradient(OptionMain, Color3.fromRGB(20, 20, 20), Color3.fromRGB(0, 0, 0))
    AddStroke(OptionMain, Color3.fromRGB(50, 50, 50), 0.7)
    local OptionTitleBar = Instance.new("TextLabel")
    OptionTitleBar.Size = UDim2.new(1, 0, 0, 28) -- Smaller
    OptionTitleBar.BackgroundColor3 = Color3.fromRGB(128, 128, 128) -- Gray
    OptionTitleBar.BackgroundTransparency = 0.1
    OptionTitleBar.Text = "... Select Hub ..." -- With dots
    OptionTitleBar.TextColor3 = Color3.fromRGB(255, 255, 255)
    OptionTitleBar.Font = Enum.Font.GothamBlack
    OptionTitleBar.TextSize = 16
    OptionTitleBar.Parent = OptionMain
    AddCorner(OptionTitleBar, 6)
    AddGradient(OptionTitleBar, Color3.fromRGB(160, 160, 160), Color3.fromRGB(96, 96, 96))
    MakeDraggable(OptionTitleBar, OptionMain)
    -- Close Button for Option
    local OptionCloseButton = Instance.new("TextButton")
    OptionCloseButton.Size = UDim2.new(0, 20, 0, 20)
    OptionCloseButton.Position = UDim2.new(1, -24, 0, 4)
    OptionCloseButton.BackgroundTransparency = 1
    OptionCloseButton.Text = "X"
    OptionCloseButton.TextColor3 = Color3.fromRGB(200, 200, 200)
    OptionCloseButton.Font = Enum.Font.GothamBold
    OptionCloseButton.TextSize = 14
    OptionCloseButton.Parent = OptionTitleBar
    OptionCloseButton.MouseButton1Click:Connect(function()
        TweenService:Create(OptionMain, TweenInfo.new(0.3, Enum.EasingStyle.Quad, Enum.EasingDirection.In), {Size = UDim2.new(0, 200, 0, 0)}):Play()
        wait(0.3)
        OptionScreenGui:Destroy()
    end)
    AddHoverEffect(OptionCloseButton, Color3.fromRGB(128, 128, 128), Color3.fromRGB(200, 50, 50))
    local ScrollingFrame = Instance.new("ScrollingFrame")
    ScrollingFrame.Size = UDim2.new(1, 0, 1, -28)
    ScrollingFrame.Position = UDim2.new(0, 0, 0, 28)
    ScrollingFrame.BackgroundTransparency = 1
    ScrollingFrame.ScrollBarThickness = 3 -- Thinner
    ScrollingFrame.Parent = OptionMain
    local OptionsList = Instance.new("UIListLayout")
    OptionsList.SortOrder = Enum.SortOrder.LayoutOrder
    OptionsList.Padding = UDim.new(0, 8) -- Smaller padding
    OptionsList.HorizontalAlignment = Enum.HorizontalAlignment.Center
    OptionsList.Parent = ScrollingFrame
    local function CreateButton(text, callback)
        local button = Instance.new("TextButton")
        button.Size = UDim2.new(0.9, 0, 0, 28) -- Smaller buttons
        button.BackgroundColor3 = Color3.fromRGB(0, 0, 0) -- Black
        button.BackgroundTransparency = 0.1
        button.TextColor3 = Color3.fromRGB(255, 255, 255)
        button.Text = text
        button.Font = Enum.Font.GothamBlack
        button.TextSize = 14
        button.Parent = ScrollingFrame
        AddCorner(button, 6)
        AddGradient(button, Color3.fromRGB(20, 20, 20), Color3.fromRGB(0, 0, 0))
        AddHoverEffect(button, Color3.fromRGB(0, 0, 0), Color3.fromRGB(30, 30, 30))
        button.MouseButton1Click:Connect(function()
            callback()
            TweenService:Create(OptionMain, TweenInfo.new(0.3, Enum.EasingStyle.Quad, Enum.EasingDirection.In), {Size = UDim2.new(0, 200, 0, 0)}):Play()
            wait(0.3)
            OptionScreenGui:Destroy()
        end)
        return button
    end
    CreateButton("ryusai's new project", function()
        SendNotification("Hub", "Loading...")
        getgenv().AP_AutoLoad = nil
        loadstring(game:HttpGet("https://raw.githubusercontent.com/magbux/ryurakio20xbMnIk666/refs/heads/main/yoyoryusaihub"))()
    end)
    CreateButton("Ryusai", function()
        SendNotification("Hub", "Loading Ryusai...")
        getgenv().AP_AutoLoad = nil
        loadstring(game:HttpGet("https://raw.githubusercontent.com/magbux/ryurakio-without-load/refs/heads/main/no%20auto%20load%20yippe", true))()
    end)
    CreateButton("Ryusai Command Hub", function()
        SendNotification("Hub", "Loading Command Hub...")
        getgenv().AP_AutoLoad = nil
        loadstring(game:HttpGet("https://raw.githubusercontent.com/magbux/ryu-command-hub/refs/heads/main/ryu%20commandment", true))()
    end)
    -- Padding for layout
    local Padding = Instance.new("UIPadding")
    Padding.PaddingTop = UDim.new(0, 8)
    Padding.PaddingBottom = UDim.new(0, 8)
    Padding.Parent = ScrollingFrame
    -- Animate appearance
    OptionMain.Visible = true
    TweenService:Create(OptionMain, TweenInfo.new(0.5, Enum.EasingStyle.Back, Enum.EasingDirection.Out), {Size = UDim2.new(0, 200, 0, 160)}):Play()
end

-- Button Functions
Submit.MouseButton1Click:Connect(function()
    local key = KeyBox.Text:match("^%s*(.-)%s*$") -- Trim spaces
    if key == "ryusai..?/(0" then
        SendNotification("Key Hub", "Correct Key!", 2)
        StatusLabel.Text = ""
        TweenService:Create(Main, TweenInfo.new(0.3, Enum.EasingStyle.Quad, Enum.EasingDirection.In), {Size = UDim2.new(0, 180, 0, 0)}):Play()
        wait(0.3)
        ScreenGui:Destroy()
        CreateOptionGUI()
    else
        SendNotification("Key Hub", "Wrong Key!", 2)
        StatusLabel.Text = "Invalid key. Try again."
        -- Shake animation for feedback
        local originalPos = Main.Position
        for i = 1, 3 do
            TweenService:Create(Main, TweenInfo.new(0.05), {Position = originalPos + UDim2.new(0, 5, 0, 0)}):Play()
            wait(0.05)
            TweenService:Create(Main, TweenInfo.new(0.05), {Position = originalPos - UDim2.new(0, 5, 0, 0)}):Play()
            wait(0.05)
        end
        TweenService:Create(Main, TweenInfo.new(0.05), {Position = originalPos}):Play()
    end
end)

CopyButton.MouseButton1Click:Connect(function()
    setclipboard("ryusai..?/(0")
    SendNotification("Key Hub", "Key copied to clipboard!", 2)
    StatusLabel.Text = "Key copied!"
    StatusLabel.TextColor3 = Color3.fromRGB(100, 255, 100)
    wait(2)
    StatusLabel.Text = ""
end)
